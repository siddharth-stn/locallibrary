extends layout 

block content 
  h1 Author: #{author.name} 
  if author.date_of_birth_formatted == null && author.date_of_death_formatted == null 
    p Author life span info not found 
  else if author.date_of_birth_formatted == null
    p Author date of birth not in database - #{author.date_of_death_formatted} 
  else if author.date_of_death_formatted == null
    p #{author.date_of_birth_formatted} - Author date of death not in database
  else 
    p #{author.date_of_birth_formatted} - #{author.date_of_death_formatted}

  div(style="margin-left:20px;margin-top:20px")

    h4 Books 

    dl 
      each book in author_books 
        dt 
          a(href=book.url) #{book.title} 
        dd #{book.summary}
      else 
        p This author has no books.
